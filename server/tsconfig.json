{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ] // Include types for Node.js
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}